{
    "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2021": true
    },
    "rules": {
      "prettier/prettier": ["error", {
        "endOfLine": "auto"
      }],
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "object-shorthand": ["error", "always"],
      "class-methods-use-this": "off",
      "camelcase": "off",
      "node/no-unsupported-features/es-syntax": ["error", {
        "version": ">=20.0.0",
        "ignores": []
      }]
    }
  }
  